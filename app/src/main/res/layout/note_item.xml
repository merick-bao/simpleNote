<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_item"
    android:layout_margin="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/note_item_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Light">
        <ImageView
            android:id="@+id/note_item_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/note_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="24dp"
            android:textColor="@color/colorText"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/note_item_image"/>

        <TextView
            android:id="@+id/note_item_summarise"
            android:text="summarise"
            android:textSize="15dp"
            android:textColor="@color/colorText"
            android:layout_toEndOf="@+id/note_item_image"
            android:layout_below="@+id/note_item_title"
            android:layout_marginStart="10dp"
            android:maxLines="3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/note_item_noteDate"
            android:text="noteDate"
            android:textSize="15dp"
            android:textColor="@color/colorText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>