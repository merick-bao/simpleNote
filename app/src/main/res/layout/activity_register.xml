<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarOfRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_input_layout1"
        android:layout_below="@+id/toolbarOfRegister"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone">
        <EditText
            android:id="@+id/register_get_username"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:inputType="number"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_input_layout2"
        android:layout_below="@+id/register_input_layout1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password">
        <EditText
            android:id="@+id/register_get_password"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/register_input_layout3"
        android:layout_below="@+id/register_input_layout2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邀请码">
        <EditText
            android:id="@+id/register_get_inviteCode"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:inputType="number"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/register"
        android:layout_below="@id/register_input_layout3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注 册"
        android:textColor="@color/colorText"
        android:background="@color/colorAccent"
        android:textSize="25sp"/>

</RelativeLayout>